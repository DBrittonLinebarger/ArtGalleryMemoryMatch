<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_constraintTop_toTopOf="parent">

  <Button
    android:id="@+id/button_theme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="144dp"
    android:layout_marginStart="132dp"
    android:text="@string/select_theme"
    app:layout_constraintBottom_toTopOf="@+id/theme_spinner"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"/>

  <Spinner
    android:id="@+id/theme_spinner"
    android:layout_width="wrap_content"
    android:layout_height="22dp"
    app:layout_constraintTop_toBottomOf="@id/button_theme"
    app:layout_constraintBottom_toTopOf="@id/button_4x4_game"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

    <Button
      android:id="@+id/button_4x4_game"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/button_theme"
      android:layout_centerHorizontal="true"
      android:text="@string/select_4x4_game"
      app:layout_constraintTop_toBottomOf="@id/theme_spinner"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  <EditText
    android:id="@+id/editText1"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:ems="10"
    android:inputType="text"
    android:hint="@string/keyword_hint"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/theme_spinner"
    />

  <Button
    android:id="@+id/button_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/editText1"
    app:layout_constraintBottom_toBottomOf="parent"/>


